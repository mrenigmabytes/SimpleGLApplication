INCS = inc/
KIND = program
OPTIONS = \
	exceptions/on \
	standard-c++/11 \
	stl/libgnustl \
	warn/on

SRCS = \
	src/SimpleGLApplication.cpp

USES = \
	OpenGL \
	ml_sdk \
	stdc++

DEFS.lumin = \
	ML_DEVICE \
	USE_GLFW=0 \

DEFS.win = \
	ML_WINDOWS \
	USE_GLFW=1 \

DEFS.osx = \
	ML_OSX \
	USE_GLFW=1 \
	
DEFS.linux = \
	ML_LINUX \
	USE_GLFW=1 \

USES.win,osx,linux = \
	glad \
	glfw



